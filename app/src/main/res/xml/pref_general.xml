<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="@string/pref_orderTypes_default"
        android:entries="@array/pref_orderTypes_entries"
        android:entryValues="@array/pref_orderTypes_values"
        android:key="@string/pref_orderKey"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_orderType" />

</PreferenceScreen>
